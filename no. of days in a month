import java.util.*;
class year {
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);
        int month, days = 0;
        
        System.out.println("Enter a valid month number between 1 to 12 : ");
        month = sc.nextInt();
        switch (month)
        {
            case 1 : 
            case 3 :
            case 5 :
            case 7 :
            case 8 :
            case 10 :
            case 12 :
                
                days = 31;
                break;
            case 2 :
            case 4 :
            case 6 :
            case 9 :
            case 11 :
                days = 30;
                break;
            default : 
                System.out.println("Enter a valid month number");
        }
        
        System.out.println("Number of days in month " +month + " is = " +days); 
    }
}
