import java.util.*;
public class factorial {
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);
        int n ;
        System.out.println("Enter a number");
        n = sc.nextInt();
        System.out.println("Factorial of " +n + " is : " + fact(n));
    }
    static int fact (int n )
    {
        if ( n < 2 )
        return 1;
        return n * fact (n-1);
    }
}
